<UserControl x:Class="TwitchDeckOverlay.UI.CardItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchDeckOverlay.UI"
             xmlns:models="clr-namespace:TwitchDeckOverlay.Models"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance models:CardInfo}">

    <UserControl.Resources>
        <local:RarityColorConverter x:Key="RarityColorConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="#FF2D2D30" 
            BorderBrush="#FF404040" 
            BorderThickness="0,0,0,1" 
            Padding="8,4"
            Margin="0,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Мана -->
            <Border Grid.Column="0" 
                    Width="20" Height="20" 
                    CornerRadius="10" 
                    Background="#FF1e3a8a"
                    BorderBrush="#FF60a5fa" 
                    BorderThickness="1">
                <TextBlock Text="{Binding Cost}" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           FontSize="11"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Назва карти -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding Name}" 
                       Foreground="#FFD4D4D4" 
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="8,0,5,0"
                       TextTrimming="CharacterEllipsis"/>
            
            <!-- Кількість -->
            <Border Grid.Column="2" 
                    Background="#FF4a5568" 
                    CornerRadius="2" 
                    Padding="4,2"
                    Margin="5,0">
                <TextBlock Text="{Binding Count}" 
                           Foreground="White" 
                           FontSize="10" 
                           FontWeight="Bold"/>
            </Border>
            
            <!-- Індикатор відсутності в колекції -->
            <Border Grid.Column="3" 
                    Background="#FFFF6B6B" 
                    CornerRadius="2" 
                    Padding="3,1"
                    Visibility="{Binding IsMissingInCollection, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="!" 
                           Foreground="White" 
                           FontSize="10" 
                           FontWeight="Bold"/>
            </Border>
        </Grid>
    </Border>
</UserControl>