<UserControl x:Class="TwitchDeckOverlay.UI.DeckItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchDeckOverlay.UI"
             xmlns:models="clr-namespace:TwitchDeckOverlay.Models"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance models:DeckInfo}">

    <UserControl.Resources>
        <local:RarityColorConverter x:Key="RarityColorConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Стиль для карт -->
        <Style x:Key="CardItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,1"/>
        </Style>
    </UserControl.Resources>

    <Border x:Name="MainBorder"
            Background="#FF252526" 
            BorderBrush="#FF404040" 
            BorderThickness="0,0,0,1"
            Cursor="Hand"
            MouseEnter="DeckItem_MouseEnter"
            MouseLeave="DeckItem_MouseLeave"
            MouseLeftButtonDown="DeckItem_Click">
        <Grid Margin="10,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Іконка класу -->
            <Border Grid.Column="0" 
                    Width="24" Height="24" 
                    CornerRadius="12" 
                    Background="#FF404040"
                    Margin="0,0,8,0">
                <Grid>
                    <Image Source="{Binding HeroImage}" 
                           Width="20" Height="20"
                           Stretch="UniformToFill"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                        <Image.Clip>
                            <EllipseGeometry Center="10,10" RadiusX="10" RadiusY="10"/>
                        </Image.Clip>
                    </Image>
                    <!-- Fallback текст якщо немає зображення -->
                    <TextBlock Text="{Binding Class, StringFormat='{}{0:1}'}" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="12"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding HeroImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                </Grid>
            </Border>
            
            <!-- Інформація про колоду -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Author}" 
                               Foreground="#FFD4D4D4" 
                               FontWeight="SemiBold" 
                               FontSize="13"/>
                    <TextBlock x:Name="TimeText"
                               Foreground="#FF888888" 
                               FontSize="11"
                               Margin="8,0,0,0"/>
                </StackPanel>
                <TextBlock Foreground="#FF888888" FontSize="11">
                    <Run Text="{Binding Class}"/>
                    <Run Text="•"/>
                    <Run Text="{Binding Mode}"/>
                    <Run Text="•"/>
                    <Run Text="{Binding Cards.Count, Mode=OneWay}"/>
                    <Run Text="cards"/>
                </TextBlock>
            </StackPanel>
            
            <!-- Індикатор нової колоди -->
            <Border Grid.Column="2" 
                    Background="#FF0078D4" 
                    CornerRadius="8" 
                    Padding="6,2" 
                    Margin="5,0"
                    Visibility="{Binding IsNew, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="NEW" 
                           Foreground="White" 
                           FontSize="9" 
                           FontWeight="Bold"/>
            </Border>
        </Grid>
    </Border>
</UserControl>