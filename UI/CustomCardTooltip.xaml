<Popup x:Class="TwitchDeckOverlay.UI.CustomCardTooltip"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Placement="Mouse"
       PlacementTarget="{Binding RelativeSource={RelativeSource Self}}"
       AllowsTransparency="True"
       PopupAnimation="Fade">
    <Border Background="Black" 
            BorderBrush="White" 
            BorderThickness="1" 
            CornerRadius="3"
            Padding="8">
        <StackPanel>
            <TextBlock Text="{Binding Name}" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                <TextBlock Text="Mana: " Foreground="LightBlue" FontSize="11"/>
                <TextBlock Text="{Binding Cost}" Foreground="White" FontSize="11" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                <TextBlock Text="Attack: " Foreground="Orange" FontSize="11"/>
                <TextBlock Text="{Binding Attack}" Foreground="White" FontSize="11" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                <TextBlock Text="Health: " Foreground="Red" FontSize="11"/>
                <TextBlock Text="{Binding Health}" Foreground="White" FontSize="11" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Count: " Foreground="Yellow" FontSize="11"/>
                <TextBlock Text="{Binding Count}" Foreground="White" FontSize="11" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Popup>